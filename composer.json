{
    "name": "max13/dtion",
    "description": "Dtion allows you to serialize and unserialize conditions and results. For instace: if $x between 'A' and 'C', result is 'X'. Else if $x between 'D' and 'F', result is 'Y'.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Adnan RIHAN",
            "email": "adnan@rihan.fr"
        }
    ],
    "keywords": [
        "conditional",
        "serialization"
    ],
    "homepage": "https://github.com/max13/dtion",
    "autoload": {
        "classmap" : [
            "src/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "require": {
        "ext-json": "*",
        "php": "^7.0 || ^8.0",
        "laravel/serializable-closure": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "fakerphp/faker": "^1.20"
    }
}
